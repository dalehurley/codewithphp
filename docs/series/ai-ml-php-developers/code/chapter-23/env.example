# Application
APP_NAME="ML Shop"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Database
DB_CONNECTION=sqlite
DB_DATABASE=/absolute/path/to/database.sqlite

# Cache
CACHE_STORE=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue
QUEUE_CONNECTION=database

# ML Configuration
ML_CACHE_ENABLED=true
ML_CACHE_TTL=3600
ML_TIMEOUT=30
ML_FALLBACK_ENABLED=true

# ML Model Paths (relative to storage/)
SENTIMENT_MODEL_PATH="${PWD}/storage/ml/sentiment_model.json"
RECOMMENDATION_MODEL_PATH="${PWD}/storage/ml/recommendations.json"

# OpenAI API (optional - for chatbot features)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Broadcasting & Events
BROADCAST_DRIVER=log

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120


