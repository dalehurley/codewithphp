{
  "name": "codewithphp/ai-ml-service",
  "description": "AI-powered ML service with job queues and deployment infrastructure",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "ext-redis": "*",
    "ext-pcntl": "*",
    "ext-json": "*",
    "ext-sockets": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      ".env.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "8.4"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit",
    "lint": "find . -name '*.php' -not -path './vendor/*' -exec php -l {} \\;"
  }
}
