{
  "name": "code-with-php/chapter-15-language-models",
  "description": "Chapter 15: Language Models and Text Generation with OpenAI APIs - Code Examples",
  "type": "project",
  "require": {
    "php": "^8.4",
    "openai-php/client": "^0.10",
    "vlucas/phpdotenv": "^5.6",
    "guzzlehttp/guzzle": "^7.8"
  },
  "autoload": {
    "psr-4": {
      "AiMlPhp\\Chapter15\\": "src/"
    },
    "files": [
      "TextGenerator.php",
      "Summarizer.php",
      "Chatbot.php",
      "OpenAIClient.php"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
